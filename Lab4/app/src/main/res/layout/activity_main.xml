<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <LinearLayout
        android:layout_width="411dp"
        android:layout_height="595dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginBottom="8dp"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <EditText
            android:id="@+id/dataTxt"
            android:layout_width="match_parent"
            android:layout_height="156dp"
            android:ems="10"
            android:hint="Data"
            android:inputType="textPersonName"
            android:textSize="30sp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="173dp"
            android:orientation="horizontal">

            <Button
                android:id="@+id/savePrivateBtn"
                android:layout_width="wrap_content"
                android:layout_height="170dp"
                android:layout_weight="1"
                android:background="#F11313"
                android:onClick="savePrivate"
                android:text="SAVE AS PRIVATE"
                android:textColor="#FFFFFF"
                android:textSize="24sp" />

            <Button
                android:id="@+id/savePublicBtn"
                android:layout_width="wrap_content"
                android:layout_height="170dp"
                android:layout_weight="1"
                android:background="#307031"
                android:onClick="savePublic"
                android:text="SAVE AS PUBLIC"
                android:textColor="#FFFFFF"
                android:textSize="24sp" />

        </LinearLayout>

        <Button
            android:id="@+id/clickViewBtn"
            android:layout_width="match_parent"
            android:layout_height="228dp"
            android:background="#195588"
            android:onClick="view"
            android:text="CLICK TO VIEW"
            android:textColor="#FFFFFF"
            android:textSize="36sp" />
    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>